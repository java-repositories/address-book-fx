<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.javabegin.training.fastjava2.javafx.objects.Person" table="Person" schema="">
        <id name="id">
            <column name="id" sql-type="integer" not-null="true"/>
            <generator class="increment"/>
        </id>
        <property name="fio">
            <column name="fio" sql-type="text" length="2000000000" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="text" length="2000000000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>